<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:viewmodels="clr-namespace:StoreApp.ViewModels" x:DataType="viewmodels:PaiementViewModel"
             x:Class="StoreApp.Views.PaiementPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Page de paiement" FontSize="Title" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
            <Grid RowDefinitions="auto" ColumnDefinitions="auto">
                <Label Text="Nom:" VerticalTextAlignment="End" FontAttributes="Bold" FontSize="Body"/>
                <Entry Grid.Column="1" Keyboard="Text" Text="{Binding Nom, Mode=TwoWay}"/>
                <Label Grid.Row="1" Text="Prenom:" VerticalTextAlignment="End" FontAttributes="Bold" FontSize="Body"/>
                <Entry Grid.Row="1" Grid.Column="1" Keyboard="Text" Text="{Binding Prenom, Mode=TwoWay}"/>
                <Label Grid.Row="2" Text="Adresse:" VerticalTextAlignment="End" FontAttributes="Bold" FontSize="Body"/>
                <Entry Grid.Row="2" Grid.Column="1" Keyboard="Text" Text="{Binding Adresse, Mode=TwoWay}"/>
                <Label Grid.Row="3" Text="Telephone:" VerticalTextAlignment="End" FontAttributes="Bold" FontSize="Body"/>
                <Entry Grid.Row="3" Grid.Column="1" Keyboard="Telephone" Text="{Binding Telephone, Mode=TwoWay}"/>
                <Label Grid.Row="4" Text="Courriel:" VerticalTextAlignment="End" FontAttributes="Bold" FontSize="Body"/>
                <Entry Grid.Row="4" Grid.Column="1" Keyboard="Email" Text="{Binding Courriel, Mode=TwoWay}"/>
                <Label Grid.Row="5" Text="Carte de credit:" VerticalTextAlignment="End" FontAttributes="Bold" FontSize="Body"/>
                <Entry Grid.Row="5" Grid.Column="1" Keyboard="Numeric" Text="{Binding CarteCredit, Mode=TwoWay}"/>
            </Grid>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Margin="0,40" Spacing="50">
                <Button Text="Annuler" CornerRadius="5" BackgroundColor="LightCoral" Command="{Binding PaiementCanceled}"/>
                <Button Text="Payer" CornerRadius="5" BackgroundColor="LightGreen" Command="{Binding PaiementConfirmed}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>