<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StoreApp.Views.PhonesPage"
             Title="Liste des Telephones"
             xmlns:model="clr-namespace:StoreApp.Models"
             xmlns:vm="clr-namespace:StoreApp.ViewModels">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Vider Panier"/>
    </ContentPage.ToolbarItems>
    <CollectionView x:Name="PhonesListView" ItemsSource="{Binding Phones}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame>
                <StackLayout Padding="10" x:DataType="model:SmartDevice" Orientation="Horizontal">
                    <Image Source="phoneImage.png"
                           Aspect="AspectFit"
                           HeightRequest="150"
                           WidthRequest="150"/>
                        <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand">
                    <Label Text="{Binding Modele}"/>
                    <Label Text="{Binding Fabriquant}"/>
                    <Label Text="{Binding Type}"/>
                    <Label Text="{Binding Prix}"/>
                        </StackLayout>
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>