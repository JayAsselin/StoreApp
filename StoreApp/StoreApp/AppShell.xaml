<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StoreApp.AppShell"
             xmlns:views="clr-namespace:StoreApp.Views" 
             Style="{StaticResource BaseStyle}">

    <!--Jerome Asselin 2195077-->
    
    <TabBar>
        <ShellContent Route="accueil" Title="Accueil" 
                      Icon="infoIcon.ico" 
                      ContentTemplate="{DataTemplate views:AccueilPage}"/>

        <ShellContent Route="magasin" Title="Magasiner" Icon="storeIcon.ico" ContentTemplate="{DataTemplate views:ItemsList}"/>

        <ShellContent Route="panier" Title="Voir Panier" 
                      Icon="cartIcon.ico" 
                      ContentTemplate="{DataTemplate views:PanierPage}"/>
            
        <ShellContent Route="facture" Title="Facture" Icon="invoiceIcon.ico" ContentTemplate="{DataTemplate views:FacturePage}"/>
    </TabBar>

</Shell>
